<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:google="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_centerInParent="true"
        android:background="@color/titleBlue"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/arc_left"
            android:layout_width="wrap_content"
            android:layout_height="200dip"
            >

            <com.google.mobilesafe.ui.widget.circleprogress.ArcProgress
                android:id="@+id/arc_store"
                android:layout_width="180dp"
                android:layout_height="180dp"
                google:arc_bottom_text="存储空间"
                google:arc_bottom_text_size="18dip"
                google:arc_progress="10"
                google:arc_stroke_width="8dip"
                google:arc_text_color="#ffffff"
                google:arc_text_size="32dip"/>

            <TextView
                android:id="@+id/capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="55dip"
                android:text="20/30"
                android:textColor="@color/white"
                android:textSize="12dip"/>
        </RelativeLayout>

        <com.google.mobilesafe.ui.widget.circleprogress.ArcProgress
            android:id="@+id/arc_process"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dip"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/arc_left"
            google:arc_bottom_text="内存"
            google:arc_bottom_text_size="14dip"
            google:arc_progress="10"
            google:arc_stroke_width="6dip"
            google:arc_text_color="#ffffff"
            google:arc_text_size="26dip"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内存加速"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内存加速"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内存加速"/>

    </LinearLayout>


</LinearLayout>
