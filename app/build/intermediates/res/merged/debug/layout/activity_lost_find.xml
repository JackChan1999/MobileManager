<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="手机防盗"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textColor="@color/grey_800"
            android:textSize="18sp"/>

        <TextView
            android:id="@id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="13843843838"
            android:textColor="@color/grey_800"
            android:textSize="18sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ms_gray3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textColor="@color/grey_800"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_lock_black_24dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ms_gray3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tv_selector"
        android:gravity="center_vertical"
        android:onClick="reEnter"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="重新进入设置向导"
        android:textColor="@color/grey_800"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#4A86CE"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="功能介绍"
        android:textColor="#fff"
        android:textSize="18sp"/>

    <TextView
        style="@style/contentStyle"
        android:drawableLeft="@mipmap/btn_radio_on_holo_dark"
        android:gravity="center"
        android:text="GPS追踪：#*location*#"/>

    <TextView
        style="@style/contentStyle"
        android:drawableLeft="@mipmap/btn_radio_on_holo_dark"
        android:gravity="center"
        android:text="远程锁屏：#*lockscreen*#"/>

    <TextView
        style="@style/contentStyle"
        android:drawableLeft="@mipmap/btn_radio_on_holo_dark"
        android:gravity="center"
        android:text="SIM卡变更报警：#*alarm*#"/>

    <TextView
        style="@style/contentStyle"
        android:drawableLeft="@mipmap/btn_radio_on_holo_dark"
        android:gravity="center"
        android:text="远程删除数据：#*wipedata*#"/>

</LinearLayout>